{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true
  },

  "exclude": [
    "../**/*.spec.js",
    "../**/*.test.js",
    "../**/*.spec.ts",
    "../**/*.test.ts",
    "../**/*.spec.tsx",
    "../**/*.test.tsx",
    "../**/*.spec.jsx",
    "../**/*.test.jsx",
    "../node_modules",
    "../dist",
    "../tmp"
  ],
  "include": [
    "../**/*.stories.ts",
    "../**/*.stories.js",
    "../**/*.stories.jsx",
    "../**/*.stories.tsx",
    "../**/*.stories.mdx",
    "*.ts",
    "*.js"
  ]
}
